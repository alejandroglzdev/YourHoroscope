<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YourHoroscope" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/secondary</item>
    </style>

    <style name="Theme.YourHoroscope" parent="Base.Theme.YourHoroscope" />

    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/dancing</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Body" parent="Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>